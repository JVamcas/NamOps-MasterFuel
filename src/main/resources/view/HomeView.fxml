<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="homePane" minHeight="512.0" minWidth="1024.0" prefHeight="512.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <MenuBar style="-fx-background-color: #5D6D7E;" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" style="-fx-text-fill: #FFFFFF" text="File">
                    <items>
                        <MenuItem fx:id="userMenuItem" mnemonicParsing="false" onAction="#toUserTableView" text="Users" />
                        <MenuItem fx:id="vehiclesMenuItem" mnemonicParsing="false" onAction="#toVehicleTableView" text="Vehicles" />
                    </items>
                </Menu>

                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Find" />
                        <MenuItem mnemonicParsing="false" text="Undo" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Reports" />
            </menus>
        </MenuBar>
    </top>
    <center>
        <ScrollPane fx:id="tableViewScrollPane" pannable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="5.0" />
            </padding>
            <TableView fx:id="fuelTransactionTable" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets left="5.0" right="5.0" />
                </VBox.margin>
                <padding>
                    <Insets left="5.0" right="5.0" />
                </padding>
            </TableView>
        </ScrollPane>
    </center>
    <bottom>
        <HBox spacing="10.0" style="-fx-background-color: #2E4053;">
            <Button fx:id="refresh" style="-fx-background-radius: 10; -fx-background-color: #D0D3C2;" text="Refresh">
            <HBox.margin>
               <Insets left="5.0" />
            </HBox.margin></Button>
            <Button fx:id="export" style="-fx-background-radius: 10; -fx-background-color: #6B6D64;" text="Export" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="storageRefill" onAction="#toStorageRefill" style="-fx-background-color: #C8D896; -fx-background-radius: 10;" text="Fill storage" />
            <Button fx:id="vehicleRefill" onAction="#toVehicleRefill" style="-fx-background-color: B9E337; -fx-background-radius: 10;" text="Dispense">
            <HBox.margin>
               <Insets right="5.0" />
            </HBox.margin></Button>
         <BorderPane.margin>
            <Insets bottom="5.0" right="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
        </HBox>
    </bottom>
</BorderPane>
